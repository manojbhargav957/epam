import java.io.*;
import java.util.*;
class ArrDemo1{
public static void main(String[] args){
Scanner sc=new Scanner(System.in);
int n=sc.nextInt();
int a[]=new int[n];
for(int i=0;i<n;i++)
{
a[i]=sc.nextInt();
}
int sum=0;
for(int i=0;i<n;i++)
{
sum=sum+a[i];
}
float avg=sum/n;
System.out.println("The sum is"+sum);
System.out.println("The average is "+avg);
}
}
